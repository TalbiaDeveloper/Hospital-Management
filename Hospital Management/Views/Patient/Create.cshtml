@model Patient
<form method="POST" asp-action="Create">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary"> Create Patient</h2>
			<hr />
		</div>
		<div asp-validation-summary="ModelOnly"></div>
		<div class="mb-3 row p-1">
			<input asp-for="PatientID" type="text" class="from-control">
			<span asp-validation-for="PatientID" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-1 my-4 ">
			<label asp-for="FirstName" class="p-0"> </label>
			<input asp-for="FirstName" type="text" class="from-control" />
			<span asp-validation-for="FirstName" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-1 my-4 ">
			<label asp-for="LastName" class="p-0"> </label>
			<input asp-for="LastName" type="text" class="from-control" />
			<span asp-validation-for="LastName" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-1 my-4 ">
			<label asp-for="Gender" class="p-0"> </label>
			<input asp-for="Gender" type="text" class="from-control" />
			<span asp-validation-for="Gender" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-1 my-4 ">
			<label asp-for="ContactNumber" class="p-0"> </label>
			<input asp-for="ContactNumber" type="text" class="from-control" />
			<span asp-validation-for="ContactNumber" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-1 my-4 ">
			<label asp-for="Email" class="p-0"> </label>
			<input asp-for="Email" type="text" class="from-control" />
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-1 my-4 ">
			<label asp-for="Address" class="p-0"> </label>
			<input asp-for="Address" type="text" class="from-control" />
			<span asp-validation-for="Address" class="text-danger"></span>
		</div>
