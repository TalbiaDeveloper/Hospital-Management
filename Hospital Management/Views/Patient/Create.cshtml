			<label asp-for="ComId" class="p-0">Company Id</label>
			<select asp-for="ComId" class="form-control" asp-items="ViewBag.CompanyList">
				<option value="">Select Company</option> <!-- Optional: Default placeholder -->
			</select>
			<span asp-validation-for="ComId" class="text-danger"></span>
		</div> *@


		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-primary from-control">Create</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="Patient" asp-action="Index" class="btn btn-outline-secondary from-control ">
					Back To List
				</a>
			</div>
		</div>
	</div>
</form>
