 @model List<Doctor>
<head>
@*     <link href="https://unpkg.com/tabulator-tables@6.3.0/dist/css/tabulator.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet"> *@
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<div class="container">
    <div class="row pt-4 pb-2">
        <div class="col-6">
            <h2 class="text-primary">
                Doctor List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Doctor" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>
                Create New Company
            </a>
        </div>
    </div>
    <div class="container-fluid">
@*         <div id="CompanyTable"></div>
        <div id="dataContainer"></div> *@
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    DoctorID
                </th>
                <th>
                    FirstName
                </th>
                <th>
                    LastName
                </th>
                <th>
                    Specialty
                </th>
                <th>
                    ContactNumber
                </th>
                <th>
                    Email
                </th>
                <th>
                    OfficeAddress
                </th>
                <th>
                    Edit
                </th>
                <th>
                    Delete
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj1 in Model)
            {
                <tr>
                    <td>@obj1.DoctorID</td>
                    <td>@obj1.FirstName</td>
                    <td>@obj1.LastName</td>
                    <td>@obj1.Specialty</td>
                    <td>@obj1.ContactNumber</td>
                    <td>@obj1.Email</td>
                    <td>@obj1.OfficeAddress</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Doctor" asp-action="Edit" asp-route-Id="@obj1.DoctorID" class="btn btn-primary mx-2"><i class="bi bi-pencil-fill"></i></a>
                        </div>
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Doctor" asp-action="DeletePOST" asp-route-Id="@obj1.DoctorID" class="btn btn-danger mx-2"><i class="bi bi-trash3"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
   </div>